#!/bin/bash
cd "$(dirname "$0")/../"

source ./bin/begin.sh

python3 -c '
import asyncio
from backend.question_analyzer_FAISS_2 import full_pipeline, init_resources
import backend.create_FAISS_2

async def main():
    backend.create_FAISS_2.init_resources()
    backend.create_FAISS_2.build_or_update_index()
    init_resources()
    query = "ИИ"
    results, highlights = await full_pipeline(query)
    print(results)
    print(highlights)
    print("\n--- Результаты ---\n")
    #for r, hl in zip(results, highlights):
        #print(f"{r}")
        #print(f"[Подсветка]: {hl}\n")

asyncio.run(main())
'